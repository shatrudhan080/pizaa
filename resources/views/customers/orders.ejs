<section class="orders light-section">
    <div class="container mx-auto pt-12">
        <h1 class="font-bold text-lg mb-4">
            All Oders
        </h1>
        <div id="success-alert" role="alert" class="flex text-white items-center text-white text-bold gb-green-500">
            <% if(messages.success){ %>
                <p>
                    <%= messages.success %>
                </p>
                <% } %>
        </div>
        <table class="w-full table-auto bg-white">
            <thead>
                <tr>
                    <th class="px-4 py-2 text-left">Orders</th>
                    <th class="px-4 py-2 text-left">Address</th>
                    <th class="px-4 py-2 text-left">Time</th>
                </tr>
            </thead>
            <tbody>
                <% if(orders.length){ %>
                    <% orders.forEach((order)=>{ %>
                        <tr>
                            <td class="border px-4 py-2">
                                <a class="link" href="#">
                                    <%= order._id %>
                                </a>
                            </td>
                            <td class="border px-4 py-2">
                                <%= order.phone %>
                            </td>
                            <td class="border px-4 py-2">
                                <%= order.address %>
                            </td>
                            <td class="border px-4 py-2">
                                <%= moment(order.createdAt).format('hh:mm A') %>
                            </td>
                        </tr>
                        <% }) %>

                            <% }else{ %>
                                <tr>
                                    <th class="p-4"><span>No Orders Found</span> </th>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>

</section>